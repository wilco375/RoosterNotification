<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/backgroundColor"
    tools:context="com.wilco375.roosternotification.activity.HelpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Log in op https://[school].zportal.nl"
                android:id="@+id/stepOne"
                android:layout_marginBottom="8dp"
                android:textColor="@color/textColorSecondary"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stepOneImg"
                android:src="@drawable/zermelo_1"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/stepOne"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Ga naar het Portal toe"
                android:id="@+id/stepTwo"
                android:layout_marginBottom="8dp"
                android:textColor="@color/textColorSecondary"
                android:layout_below="@+id/stepOneImg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stepTwoImg"
                android:src="@drawable/zermelo_2"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:layout_below="@+id/stepTwo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Ga naar Koppel app, kopieer de 12-cijferige code en plak hem in deze app, en klik op de knop met het vinkje rechtsonderin"
                android:id="@+id/stepThree"
                android:textColor="@color/textColorSecondary"
                android:layout_below="@+id/stepTwoImg"
                android:layout_marginBottom="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stepThreeImg"
                android:src="@drawable/zermelo_3"
                android:adjustViewBounds="true"
                android:layout_below="@+id/stepThree"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>